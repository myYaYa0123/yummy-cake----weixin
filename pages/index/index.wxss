.selection{
  width:100%;
  padding:10rpx 5rpx;
  }
image{width:375px;}
.header{
  border-left: 2px solid limegreen;
  padding-left: 5px;
  margin-top: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  }
  .hot-selection{
    border-bottom: 2px solid #eee;
  }
.text-right{color: green;font-size:12px;padding-right: 10px;}
.content{
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  height:250rpx;
  width: 45%;
  background-color: orangered;
  margin: 4px;
  position:relative;
}
.content-item image{
  width: 100%;
  height: 100%;
}
.content-img-text{
  position: absolute;
  bottom: 0px;
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.3),rgba(0, 0, 0, 0));
  font-size: 12px;
  height: 85rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 1%;
  color: white;
}
.list-item{
  height: 600rpx;
  width: 100%;
}
.list-item-imgs{
  height: 400rpx;
  width: 100%;
  position: relative;
}
.list-item-imgs image{
  width: 100%;
  height: 100%;
}
.list-item-imgs image.log{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -75rpx;
  right: 75rpx;
}
.list-item-text{
  height: 200rpx;
  margin: 10px;
}
.list-item-content{
  font-size: 12px;
  color: #999;
  margin-top: 10px;
}