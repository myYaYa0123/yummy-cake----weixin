<view class="container">
  <view class="item">
    <image src="../../images/logo.jpg" class="logo-image"></image>
  </view>
  <view class="item">
    <view class="login-item">
      <view class="login-item-info">用户名：</view>
      <view><input bindinput="userName"/></view>
    </view>
    
    <view class="login-item">
      <view class="login-item-info">密码：</view>
      <view class="login-pwd"><input bindinput="userPass" password="true"/>
      <text>忘记密码？</text>
      </view>
    </view>

    <view class="login-item button">
      <button class="login-btn" bindtap="loginClick">登录</button>
    </view>

    <view class="item bottom-info">
      <view>没有账号？<text>注册</text></view>
      <view class="chat-icon">
        <image src="../../images/wechat.png"></image>
      </view>
    </view>
  </view>
</view>